{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        // "jsx-a11y/anchor-is-valid": [ "error", {
        //     "components": [ "Link" ],
        //     "specialLink": [ "hrefLeft", "hrefRight" ],
        //     "aspects": [ "invalidHref", "preferButton" ]
        // }],
        "no-console": "error",
        "no-unused-vars": [
            "error",
            {
                "args": "after-used",
                "ignoreRestSiblings": false,
                "argsIgnorePattern": "^_$"
            }
        ],
        // "prettier/prettier": [
        //     "error",
        //     {
        //         "semi": true,
        //         "trailingComma": "es5",
        //         "printWidth": 120
        //     }
        // ],
        // "import/order": ["error", {"newlines-between": "always"}],
        "react/self-closing-comp": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/jsx-sort-props": ["error", {
            "callbacksLast": true,
            "shorthandFirst": true,
            "noSortAlphabetically": false,
            "reservedFirst": true
        }],
        "react/prop-types": 0
    }
}